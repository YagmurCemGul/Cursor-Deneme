{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["chrome"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "vitest.config.ts", "manifest.ts", "typedoc.json"]
}
