# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=chrome-extension://your-extension-id

# Database
# Option 1: Local PostgreSQL
# DATABASE_URL="postgresql://username:password@localhost:5432/resume_app"

# Option 2: Supabase (Recommended - Free!)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# AI API Keys (Server-side - NEVER expose to client!)
OPENAI_API_KEY="sk-your-openai-key"
ANTHROPIC_API_KEY="sk-ant-your-claude-key"
GOOGLE_API_KEY="AIza-your-gemini-key"

# Redis (Optional - for caching and queues)
REDIS_URL="redis://localhost:6379"

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="resume-builder-files"
