# AI CV Optimizer Environment Variables
# Copy this file to .env and fill in your values

# Node Environment (development, production, test)
NODE_ENV=development

# Google OAuth2 Client ID (for Google Drive integration)
# Get this from: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# OpenAI API Configuration (optional - users can set in extension)
# OPENAI_API_KEY=sk-...

# Gemini API Configuration (optional - users can set in extension)
# GEMINI_API_KEY=...

# Claude API Configuration (optional - users can set in extension)
# CLAUDE_API_KEY=...

# Feature Flags
ENABLE_MOCK_MODE=true
ENABLE_GOOGLE_DRIVE=true
ENABLE_AI_PROVIDERS=true

# Logging
LOG_LEVEL=debug
