{
  "manifest_version": 3,
  "name": "AI CV & Cover Letter Optimizer",
  "version": "1.0.0",
  "description": "AI-powered CV and Cover Letter optimization with ATS compatibility",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "identity",
    "scripting",
    "tabs",
    "contextMenus",
    "notifications"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Open CV Builder"
    },
    "quick-capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Command+Shift+J"
      },
      "description": "Quick capture job from current page"
    },
    "open-tracker": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open Job Tracker"
    }
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/presentations",
      "https://www.googleapis.com/auth/gmail.compose"
    ]
  },
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://docs.googleapis.com/*",
    "https://sheets.googleapis.com/*",
    "https://slides.googleapis.com/*",
    "https://gmail.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://www.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.remote.co/*",
    "https://*.myworkdayjobs.com/*",
    "https://*.workday.com/*",
    "https://*.greenhouse.io/*",
    "https://boards.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://jobs.lever.co/*",
    "https://*.ashbyhq.com/*",
    "https://jobs.ashbyhq.com/*",
    "https://*.smartrecruiters.com/*",
    "https://jobs.smartrecruiters.com/*",
    "https://*.successfactors.com/*",
    "https://*.successfactors.eu/*",
    "https://*.workable.com/*",
    "https://apply.workable.com/*",
    "https://*.icims.com/*",
    "https://careers.icims.com/*",
    "https://*.indeed.co.uk/*",
    "https://*.indeed.ca/*",
    "https://*.glassdoor.co.uk/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.remote.co/*",
        "https://*.weworkremotely.com/*"
      ],
      "js": ["src/content/content.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.myworkdayjobs.com/*",
        "https://*.workday.com/*",
        "https://*.greenhouse.io/*",
        "https://boards.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://jobs.lever.co/*",
        "https://*.ashbyhq.com/*",
        "https://jobs.ashbyhq.com/*",
        "https://*.smartrecruiters.com/*",
        "https://jobs.smartrecruiters.com/*",
        "https://*.successfactors.com/*",
        "https://*.successfactors.eu/*",
        "https://*.workable.com/*",
        "https://apply.workable.com/*",
        "https://*.icims.com/*",
        "https://careers.icims.com/*",
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.indeed.co.uk/*",
        "https://*.indeed.ca/*",
        "https://*.glassdoor.com/*",
        "https://*.glassdoor.co.uk/*"
      ],
      "js": ["src/ats/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options/index.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

